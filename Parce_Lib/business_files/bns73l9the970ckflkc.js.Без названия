
var llcontext=llcontext||{};var llcontext_load=function()
{var el=llcontext&&llcontext.id&&document.getElementById(llcontext.id)?document.getElementById(llcontext.id):document.getElementById('llcontext');if(!el)return false;var url=llcontext.url&&llcontext.url!='undefined'?llcontext.url:'context/get';var llsrc='https://www.livelib.ru/'+url;var alias=llcontext&&llcontext.alias?llcontext.alias:'undefined';if(!alias)return false;if(url=='context/get')
{llsrc+='?alias='+encodeURIComponent(alias);if(llcontext&&llcontext.adult_content!='undefined'&&llcontext.adult_content!=null&&llcontext.adult_content===false)
{llsrc+='&adult_content=0';}
if(llcontext&&llcontext.position!='undefined'&&llcontext.position!=null)
{llsrc+='&position='+encodeURIComponent(llcontext.position);}
llsrc+='&callback=llcontextcallback'}
var script=document.createElement('script');script.type='text/javascript';script.src=llsrc;script.defer='defer';script.async=true;document.head.appendChild(script);}
var llcontextcallback=function(json)
{if(!json||json.status||!json.data)
{return false;}
var el=llcontext&&llcontext.id&&document.getElementById(llcontext.id)?document.getElementById(llcontext.id):document.getElementById('llcontext');if(!el)return false;var html='';if(llcontext.position&&llcontext.position!='undefined')
{if(llcontext.position=='horizontal')html=llcontext_vertical(json.data);else html=llcontext_vertical(json.data);}
else
{html=llcontext_vertical(json.data);}
var html=llcontext.position&&llcontext.position!='undefined'&&llcontext.position=='horizontal'?llcontext_horizontal(json.data):llcontext_vertical(json.data);el.innerHTML=html;if(el.style.display=='none')el.style.display='';}
var llcontext_vertical=function(data)
{var html='<div style="width:'+llRandChange(240)+'px;height:400px;overflow:hidden">';html+='<div style="text-align:right;"><a style="color: #74716c;font-size:10px;" href="https://www.livelib.ru/advertising">реклама</a></div>';for(var i=0;i<data.length;i++)
{var item=data[i];if(!item)continue;html+='<div style="padding-bottom:15px;text-align:left;">';if(item.img)
{html+='<a target="_blank" rel="nofollow" style="float: left" href="'+item.url+'" title="'+item.title+'"><img src="'+item.img+'" style="width: '+llRandChange(60)+'px;" alt="'+item.title+'"></a>';}
html+='<div style="-ms-word-wrap: break-word; word-wrap: break-word;line-height: 125%;'+(item.img!=''&&item.img?'padding-left: '+llRandChange(71)+'px; width: '+llRandChange(170)+'px;':'width: '+llRandChange(240)+'px;')+'">'
html+='<div style="margin-bottom: 2px"><a target="_blank" rel="nofollow" href="'+item.url+'" style="font-weight: bold;color: #0768D8;font-size:14px;text-decoration:none;font-family: Arial, Helvetica, sans-serif;">'+item.title+'</a></div>';html+='<div style="max-height:'+llRandChange(170)+'px;overflow:hidden;font-family: Arial, Helvetica, sans-serif;font-size:13px;color:#000;">'+item.text+'</div>';html+='<span style="color: green; line-height: 150%;font-size:13px;">'+item.domain+'</span>';if(item.adult_content)html+='<br><span style="font-size:12px;color:#848484;">18+</span>';html+='</div>';html+='</div>';}
html+='</div>';return html;}
var llcontext_horizontal=function(data)
{var html='<div style="display:block !important;visibility: visible !important;max-width:930px;width:930px;max-height:180px;height:180px;text-align:center;margin:0 auto;position:relative;">';html+='<div style="text-align:right;"><a style="color: #74716c;font-size:10px;" href="https://www.livelib.ru/advertising">реклама</a></div>';for(var i=0;i<data.length;i++)
{var item=data[i];if(!item)continue;html+='<div style="width:'+llRandChange(285)+'px;display:inline-block;margin:0 10px;text-align:left;vertical-align:top;">';if(item.img)
{html+='<a target="_blank" rel="nofollow" style="float: left" href="'+item.url+'" title="'+item.title+'"><img src="'+item.img+'" style="width: '+llRandChange(60)+'px;" alt="'+item.title+'"></a>';}
html+='<div style="-ms-word-wrap: break-word; word-wrap: break-word;line-height: 18px;'+(item.img!=''&&item.img?'padding-left: '+llRandChange(71)+'px; width: '+llRandChange(215)+'px;':'width: '+llRandChange(285)+'px;')+'">'
html+='<div style="margin-bottom: 2px"><a target="_blank" rel="nofollow" href="'+item.url+'" style="font-weight: bold;color: #0768D8;font-size:14px;text-decoration:none;font-family: Arial, Helvetica, sans-serif;">'+item.title+'</a></div>';html+='<div style="max-height:'+llRandChange(90)+'px;overflow:hidden;font-family: Arial, Helvetica, sans-serif;font-size:13px;color:#000;">'+item.text+'</div>';html+='<span style="color: green; line-height: 150%;font-size:13px;">'+item.domain+'</span>';if(item.adult_content)html+='<br><span style="font-size:12px;color:#848484;">18+</span>';html+='</div>';html+='</div>';}
html+='</div>';return html;}
function llRandChange(number)
{return (number+((Math.random()*3)-1)*0.1).toFixed(5);}
llcontext_load();