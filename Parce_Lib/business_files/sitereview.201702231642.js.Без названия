
var user_rec_rating=0;function set_sitereview_rating(rating,max_rating)
{user_rec_rating=rating;if(user_rec_rating>max_rating)
{$('div-sitereview-comment').style.display='none';$('sitereview-text').value='';}
else if(user_rec_rating>0&&user_rec_rating<=max_rating)
{$('div-sitereview-comment').style.display='block';}
$('sitereview-comment').style.display='none';$('sitereview-comment-select').innerHTML=$('sr-'+rating).innerHTML+'<span class="i-arrow-select-down" style="float:right;margin: 8px -3px 0px 4px;"></span>';return true;}
function send_sitereview_comment()
{var user_rating=user_rec_rating;if(user_rating<1||user_rating>5)
{alert('Выберите оценку');return false;}
var comment=$('sitereview-text').value;new Request({method:'post',url:'/main/savesrvote',onComplete:function(json)
{json=strToJson(json);if(json.content)
{user_rec_rating=0;$('sitereview-holder').innerHTML=json.content;}
else
{alert('Ошибка сохранения отзыва');return false;}}}).send("comment="+comment+"&rating="+user_rating+"&sr="+$('sr').value+'&from='+location.href);}
function sitereview_open_form()
{new Request({method:'post',url:'/main/getsrform',onComplete:function(json)
{json=strToJson(json);if(json.content)
{$('sitereview-holder').innerHTML=json.content;}}}).send("&sr="+$('sr').value);}